# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript files
[*.js]
indent_style = space
indent_size = 2
max_line_length = 120

# CSS files
[*.css]
indent_style = space
indent_size = 2
max_line_length = 120

# SCSS files
[*.scss]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Blade files
[*.blade.php]
indent_style = space
indent_size = 4

# Configuration files
[*.env]
indent_style = space
indent_size = 4

[*.ini]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Package.json
[package.json]
indent_style = space
indent_size = 2